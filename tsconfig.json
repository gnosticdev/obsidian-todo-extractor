{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ESNext",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "Node",
		"noEmit": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"isolatedModules": true,
		"types": ["obsidian", "bun"],
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"jsx": "preserve",
		"jsxImportSource": "react"
	},
	"include": ["src", "__tests__", "*.ts"]
}
